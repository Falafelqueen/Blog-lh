<% content_for :navbar do %>
<%= render "./layouts/navbar_clear" %>
<% end %>
<div class="form-container">
<%= form_with(url: login_path, scope: :session, local: true, class: "simple_form") do |f| %>
<div class="form-group">
  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %>
</div>
<%= f.button "Log in", class: "btn-normal btn-centered" %>
<% end %>
</div>
<p>Are you a new user? <%= link_to "Sign up now!", signup_path, class: "bold-blue"%></p>
