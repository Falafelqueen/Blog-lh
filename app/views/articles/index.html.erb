
  <div class="filter-bar line-bar">
    <div class="bar-section">
    <span><%= image_tag "Filter-icon.svg", class:"filter-icon" %></span>
    <p>Category</p>
    <div class="filter-group">
    <%= form_with url: articles_path, method: :get , class: "filter-boxes" do |f| %>
    <span><%= f.label :filter_option1, image_tag("JS-icon.svg", class:"filter-icon") %></span>
        <%= check_box_tag :filter_option, :TDD, false , id: "filter_option1",onchange: "this.form.submit()"%>
      <span><%= f.label :filter_option2, image_tag("Ruby-icon.svg", class:"filter-icon") %></span>
        <%= check_box_tag :filter_option, :Test, false, id:"filter_option2", onchange: "this.form.submit()" %>
      <span><%= f.label :filter_option, image_tag("Rails-icon.svg", class:"filter-icon") %></span>
        <%= check_box_tag :filter_option, :ruby, false, onchange: "this.form.submit()" %>
    <% end %>
    <span> <%= link_to "Remove filters", articles_path %></span>
    </div>
    </div>
    <div class="bar-section">
      <span><%= image_tag "Sort-up-icon.svg", class:"filter-icon" %></span>
    </div>
  </div>
<div class="page-section">


  <h2>Most recent</h1>
  <div class="longer-line"></div>

  <div class="cards-holder">

    <% @articles.each do |article| %>

      <div class="card-container">
            <%= link_to article_path(article) do %>
        <div class="img-holder">
          <%= image_tag "Sample.jpg", class: "card-image" %>
          <div class="img-overlay"></div>
        </div>
        <div class="card-content">

          <div class="info-line-small">
            <p><%= article.user.username %></p>
            <p><%= article.created_at.strftime("%d-%m-%Y") %></p>
            <span><%= image_tag "Comment-icon.svg", class: "icon-small" %></span>
            <p>5</p>
          </div>

          <div class="card-content-main">
              <h3><%= article.title %></h3>
          </div>
          <div class="bottom-right">
            <div class="short-line">
            </div>
              <p><%= article.category %></p>
          </div>
        </div>
            <% end %>
      </div>
    <% end %>
  </div>
</div>
  <% if current_user %>
  <%=  link_to "Add", articles_new_path %>
  <% end %>
